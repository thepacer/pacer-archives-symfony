{% extends base_template %}

{% block title %}
    {{ "title_show"|trans({'%name%': admin.toString(object)|truncate(15) }, 'SonataAdminBundle') }}
{% endblock %}

{% block navbar_title %}
    {{ block('title') }}
{% endblock %}

{%- block actions -%}
    {% include '@SonataAdmin/CRUD/action_buttons.html.twig' %}
{%- endblock -%}

{% block show %}
<div class="sonata-ba-view">
  <div class="panel panel-default">
    <div class="panel-heading">Volume</div>
    <div class="panel-body">
      <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ object.id }}</td>
            </tr>
            <tr>
                <th>Volume Number</th>
                <td>{{ object.volumeNumber }}</td>
            </tr>
            <tr>
                <th>Start Date</th>
                <td>{{ object.volumeStartDate ? object.volumeStartDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>End Date</th>
                <td>{{ object.volumeEndDate ? object.volumeEndDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nameplate Key</th>
                <td>{{ object.nameplateKey }}</td>
            </tr>
        </tbody>
      </table>
  </div>
</div>

{% if object.issues.count %}
<div class="panel panel-default">
  <div class="panel-heading">Issues</div>
  <div class="panel-body">
    <ul>
      {% for issue in object.issues %}
      <li><a href="{{ path('admin_app_issue_edit', {'id': issue.id}) }}">{{ issue }}</a></li>
      {% endfor %}
    </ul>
    {% endif %}
  </div>
</div>
{% endblock %}
