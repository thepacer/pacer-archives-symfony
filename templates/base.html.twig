<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}The Pacer{% endblock %}</title>
    {% if opengraph is defined %}
    <meta property="description" content="{{ opengraph.description|replace({"\n":' ', "\r":' '})|u.truncate(140)|default('Student newspaper at the University of Tennessee at Martin.') }}" />
    <meta property="og:site_name" content="The Pacer">
    <meta property="og:url" content="{{ app.request.uri }}">
    <meta property="og:title" content="{{ opengraph.title|default(block('title')) }}">
    <meta property="og:description" content="{{ opengraph.description|replace({"\n":' ', "\r":' '})|u.truncate(140)|default('Student newspaper at the University of Tennessee at Martin.') }}">
    <meta property="og:type" content="{{ opengraph.type|default('object') }}">
    <meta property="og:image" content="{{ opengraph.image|default(app.request.schemeAndHttpHost ~ '/assets/images/opengraph.png') }}">
    {% endif %}
    <script src="https://kit.fontawesome.com/09b66f5b11.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:700,900" rel="stylesheet">
    <link rel="shortcut icon" href="/favicon.ico" type="image/vnd.microsoft.icon" />

    {% block stylesheets -%}
    {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {%- include '_includes/favicons.html.twig' -%}
    {%- include '_includes/analytics.html.twig' -%}
  </head>
  <body>
    <a href="#content" class="sr-only sr-only-focusable">Skip to main content</a>
    <div class="container">
      <header class="site-header py-3">
      <div class="row align-items-center">
        <div class="col-md-4 text-center text-md-start pt-1">
          <a class="text-muted" href="{{ path('donate') }}" target="_blank">Support <em>The Pacer</em></a>
        </div>
        <div class="col-md-4 text-center">
          <div class="py-3 py-lg-0">
            <a class="h3 site-header-logo text-dark" href="{{ path('home') }}"><img src="{{ asset('build/nameplate.svg') }}" class="img-fluid py-2" style="max-height:80px" /></a>
          </div>
        </div>
        <div class="col-md-4 text-center text-md-end align-items-center">
          <a class="btn btn-sm btn-outline-primary" href="https://www.thepacer.net/" target="_blank"><em>ThePacer.net</em></a>
        </div>
      </div>
      </header>
    </div>
    <div id="content" tabindex="-1">
    {% block body %}{% endblock %}
    </div>
    <footer class="container my-5">
      <hr />
      <div class="row">
        <div class="col-lg-8">
          <ul class="list-inline">
            <li class="list-inline-item px-2"><a href="{{ path('home') }}">Home</a></a></li>
            <li class="list-inline-item px-2"><a href="{{ path('archive') }}">Archives</a></a></li>
            <li class="list-inline-item px-2"><a href="{{ path('missing_issues') }}">Missing Issues</a></li>
            <li class="list-inline-item px-2"><a href="{{ path('about') }}">About</a></li>
          </ul>
        </div>
        <div class="col-lg-4 text-end">
          &copy; {{ 'now'|date('Y') }} <em>The Pacer</em>
        </div>
      </div>
    </footer>
    {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {% endblock %}
  </body>
</html>
